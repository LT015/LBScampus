<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lbs.cheng.lbscampus.activity.MyNoticeActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/bg_blue"
        android:paddingTop="@dimen/space_30px"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/title_back"
                android:layout_width="@dimen/space_60px"
                android:layout_height="@dimen/space_60px"
                android:layout_below="@+id/title_padding"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_20px"
                android:src="@mipmap/back"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_padding"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/space_20px"
                android:layout_marginTop="@dimen/space_30px"
                android:text="欢迎"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/title_add"
                android:layout_width="@dimen/space_60px"
                android:layout_height="@dimen/space_60px"
                android:layout_below="@+id/title_padding"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space_20px"
                android:src="@mipmap/add"/>


        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_below="@+id/title"
        app:tabMaxWidth="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_mynotice_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_86px"
        android:background="#eee"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/bg_blue"
        app:tabIndicatorHeight="@dimen/space_2px"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/bg_blue"
        app:tabTextColor="@color/indicator_unselected_color"/>


    <android.support.v4.view.ViewPager
        android:layout_below="@+id/fragment_mynotice_title"
        android:id="@+id/fragment_mynotice_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</com.zhy.autolayout.AutoLinearLayout>
