<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lbs.cheng.lbscampus.activity.RegisterActivity">
    <include layout="@layout/title_bar"/>
    <EditText
        android:id="@+id/account"
        android:hint="请输入手机号码"
        android:layout_marginTop="@dimen/space_220px"
        android:layout_marginLeft="@dimen/space_72px"
        android:layout_marginRight="@dimen/space_72px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/space_20px"
        android:layout_marginLeft="@dimen/space_72px"
        android:layout_marginRight="@dimen/space_72px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_marginRight="@dimen/space_10px"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="visible"
            android:background="@drawable/border_yellow"
            android:id="@+id/get_identify_code"
            android:textColor="@color/white"
            android:textSize="@dimen/space_30px"
            android:gravity="center"
            android:text="发送验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/register"
        android:textColor="@color/white"
        android:background="@drawable/border_blue"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_30px"
        android:textSize="20sp"
        android:text="注册"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/space_460px"
        android:layout_height="@dimen/space_90px" />
</com.zhy.autolayout.AutoLinearLayout>
