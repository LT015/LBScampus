<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lbs.cheng.lbscampus.activity.PeopleDetailActivity">

    <include layout="@layout/title_bar"/>

    <ImageView
        android:id="@+id/user_image"
        android:scaleType="fitXY"
        android:src="@mipmap/people"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_350px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_160px">

        <TextView
            android:id="@+id/user_name"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_40px"
            android:layout_marginLeft="@dimen/space_60px"
            android:text="老师名称"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/to_navigation"
            android:layout_marginRight="@dimen/space_60px"
            android:src="@mipmap/location"
            android:layout_gravity="center"
            android:layout_width="@dimen/space_80px"
            android:layout_height="@dimen/space_80px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_2px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_weight="1"
        android:paddingRight="@dimen/space_60px"
        android:paddingLeft="@dimen/space_60px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/user_info"
            android:layout_marginTop="@dimen/space_40px"
            android:textSize="@dimen/space_30px"
            android:text="    “学高为师，德高为范”。作为一名新老师，在如今信息技术日新月异，发展很快的年代，自身的学识相当重要。所以工作以来，我不断学习，丝毫不敢松懈，继续学习成为我工作学习中重要的一部分。除了参加新教师培训，我还继续本科深造，一有空闲时间，我便潜心研究"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/click_to_navigation"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/bg_blue"
        android:text="查看位置"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100px" />


</com.zhy.autolayout.AutoLinearLayout>
