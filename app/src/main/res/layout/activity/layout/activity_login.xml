<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lbs.cheng.lbscampus.activity.LoginActivity">
    <include layout="@layout/title_bar"/>
    <ImageView
        android:layout_width="@dimen/space_332px"
        android:layout_height="@dimen/space_332px"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/map" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="加入我们，带你玩转天财"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/account"
        android:hint="请输入用户账号"
        android:text="2019111001"
        android:layout_marginTop="@dimen/space_80px"
        android:layout_marginLeft="@dimen/space_72px"
        android:layout_marginRight="@dimen/space_72px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/space_20px"
        android:layout_marginLeft="@dimen/space_72px"
        android:layout_marginRight="@dimen/space_72px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_marginRight="@dimen/space_10px"
            android:layout_weight="1"
            android:hint="请输入密码"
            android:text="123456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:background="@drawable/border_yellow"
            android:id="@+id/get_identify_code"
            android:textColor="@color/white"
            android:textSize="@dimen/space_30px"
            android:gravity="center"
            android:text="发送验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/login"
        android:textColor="@color/white"
        android:background="@drawable/border_blue"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_30px"
        android:textSize="20sp"
        android:text="登录"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/space_460px"
        android:layout_height="@dimen/space_90px" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginLeft="@dimen/space_72px"
        android:layout_marginRight="@dimen/space_72px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_45px">

        <TextView
            android:textColor="@color/bg_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_20px"
            android:id="@+id/identify_or_password"
            android:text="手机验证码登录" />

        <TextView
            android:textColor="@color/bg_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/space_10px"
            android:id="@+id/password_not"
            android:gravity="right"
            android:text="忘记密码？" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
