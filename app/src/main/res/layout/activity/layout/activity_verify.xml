<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_bar"
        android:id="@+id/title_verify"/>

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/title_verify"
        app:tabMaxWidth="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_verify_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_86px"
        android:background="#eee"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/bg_blue"
        app:tabIndicatorHeight="@dimen/space_2px"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/bg_blue"
        app:tabTextColor="@color/indicator_unselected_color"/>


    <android.support.v4.view.ViewPager
        android:layout_below="@+id/fragment_verify_title"
        android:id="@+id/fragment_verify_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</com.zhy.autolayout.AutoRelativeLayout>