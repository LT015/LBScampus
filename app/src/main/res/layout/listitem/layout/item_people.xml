<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/item_people_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/space_20px"
    android:orientation="vertical"
    android:background="@drawable/touch_bg"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lbs.cheng.lbscampus.view.RCImageView
            android:layout_marginLeft="@dimen/space_20px"
            android:scaleType="fitXY"
            android:src="@mipmap/people"
            android:id="@+id/item_people_image"
            android:layout_width="@dimen/space_208px"
            android:layout_height="@dimen/space_144px" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginRight="@dimen/space_30px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_30px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_140px">
            <TextView
                android:text="名称名称名称"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:id="@+id/item_people_name"
                android:lineSpacingExtra="@dimen/dimen_18dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="部门"
                android:ellipsize="end"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:id="@+id/item_people_dept"
                android:layout_marginRight="@dimen/space_30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="电话：暂无"
                android:ellipsize="end"
                android:textSize="13sp"
                android:layout_below="@+id/item_people_name"
                android:layout_marginTop="@dimen/space_10px"
                android:id="@+id/item_people_tel"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="邮箱：暂无"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_10px"
                android:id="@+id/item_people_email"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_marginTop="@dimen/space_10px"
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1px"/>
</com.zhy.autolayout.AutoLinearLayout>