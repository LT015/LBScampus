<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/item_notice_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/space_20px"
    android:orientation="vertical"
    android:background="@drawable/touch_bg"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginRight="@dimen/space_30px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_30px"
            android:layout_width="@dimen/space_460px"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:id="@+id/item_notice_title"
                android:lineSpacingExtra="@dimen/dimen_18dp"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginBottom="@dimen/space_10px"
                android:id="@+id/item_notice_date"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.lbs.cheng.lbscampus.view.RCImageView
            android:scaleType="fitXY"
            android:src="@mipmap/b2"
            android:id="@+id/item_notice_image"
            android:layout_width="@dimen/space_208px"
            android:layout_height="@dimen/space_144px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/space_10px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/verify_successs"
            android:gravity="center"
            android:layout_marginRight="@dimen/space_80px"
            android:layout_marginLeft="@dimen/space_80px"
            android:background="@drawable/border_blue"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/space_20px"
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/verify_fail"
            android:gravity="center"
            android:layout_marginRight="@dimen/space_80px"
            android:layout_marginLeft="@dimen/space_80px"
            android:background="@drawable/border_red_verify"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/space_20px"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_marginTop="@dimen/space_10px"
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1px"/>
</com.zhy.autolayout.AutoLinearLayout>