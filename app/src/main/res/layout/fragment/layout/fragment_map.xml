<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/fragment_map_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baidu.mapapi.map.TextureMapView>
    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center_vertical"
        android:id="@+id/fragment_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="@dimen/space_60px"
        android:background="@drawable/round_white_rectangle"
        android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/space_60px"
                android:layout_height="@dimen/space_60px"
                android:layout_marginLeft="@dimen/space_20px"
                android:src="@mipmap/someone" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/search_all_hint"
                android:textColor="@color/text_color_grey"
                android:textSize="30px" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_40px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout
            android:background="@drawable/circle_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_12px"
            android:layout_width="@dimen/space_72px"
            android:layout_height="@dimen/space_72px">
            <com.lbs.cheng.lbscampus.view.CircleImageView
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_to_my_location"
                android:layout_width="@dimen/space_50px"
                android:layout_height="@dimen/space_50px" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/map_route"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/border_blue_90"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_78px">
            <com.lbs.cheng.lbscampus.view.CircleImageView
                android:layout_width="40dp"
                android:layout_height="@dimen/space_80px"
                android:layout_marginLeft="@dimen/space_10px"
                android:src="@mipmap/route" />
            <TextView
                android:layout_marginRight="@dimen/space_30px"
                android:textSize="@dimen/space_40px"
                android:text="路线"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>